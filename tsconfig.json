{
    "compilerOptions": {
        "module": "commonjs",   
        "target": "es5",        
        "noImplicitAny": false, 
        "sourceMap": false,     
        "rootDir":"src",      
        "outDir":"dist",     
        "resolveJsonModule": true,
        "watch":false ,
        "typeRoots": ["src/types/index.d.ts", "src/global.d.ts" ],
        "types":["node", "@types/jest"],
        "lib": ["es2015","dom"]
    },
    "include":[
        "./src/**/*"
    ],
    "exclude":[
        "views",
        "dist",
        "node_modules",
        "static"
    ],
    "ts-node": {
        "files": true // 增加这一条配置即可，其他同默认配置
    },
}
